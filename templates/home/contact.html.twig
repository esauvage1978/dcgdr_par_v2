{% extends 'base.html.twig' %}

{% block title %} {{ parent() }} Contacts {% endblock %}
{% block stylesheets %}
{% endblock %}

{% block body_header %}
    <div class="col">
        <h1 class="m-0 text-dark">Listes des contacts <span class="text-muted text-sm">Administrateur et gestionnaire de l'application</span></h1>
    </div>
    <div class="col">

    </div>
    <div class="col">
        <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="{{ path('home') }}">Home</a></li>
            <li class="breadcrumb-item active">Contact</li>
        </ol>
    </div>
{% endblock %}

{% block body %}



    <div class="card card-solid">
        <div class="card-body pb-0">
            <div class="row ">
                <div class="card-deck">
                    {% for user in users %}

                        <div class="col-12 col-sm-6 col-md-4 d-flex align-items-stretch">
                            <div class="card bg-light">
                                <div class="card-header border-bottom-0">
                                    <a href="{{ path('user_show',{'id':user.id }) }}">
                                        <b>{{ user.name }}</b>
                                    </a>
                                </div>
                                <div class="card-body pt-0">
                                    <div class="row">
                                        <div class="col-7">
                                            <p class="text-muted text-sm">
                                                {{ user.content }}
                                            </p>
                                            <p class="text-muted text-sm">
                                                <i class="fas fa-envelope"></i>
                                                {{ user.email }}
                                            </p>
                                            <p class="text-muted text-sm">
                                                <i class="fas fa-phone"></i>
                                                {{ user.phone }}
                                            </p>
                                        </div>
                                        <div class="col-5 text-center">
                                            <img src="{{ user.avatar.image }}" alt="" class="img-circle img-fluid">
                                        </div>
                                    </div>
                                </div>
                                <div class="card-footer">
                                    <div class="text-right">
                                        <a href="mailto::{{ user.email }}" class="btn btn-sm bg-teal">
                                            <i class="fas fa-envelope"></i>
                                        </a>

                                    </div>
                                </div>
                            </div>
                        </div>

                    {% else %}
                        <div class="row">
                            <div class="jumbotron"> Pas d'enregistrements</div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}


{% block javascripts %}
{% endblock %}