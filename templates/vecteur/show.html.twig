{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} Vecteurs{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ absolute_url( asset('plugins/datatables-bs4/css/dataTables.bootstrap4.css')) }}">
{% endblock %}

{% block body_header %}
    {{ include('admin/_body_header.html.twig', {'domaine': 'Vecteurs' , 'id' : vecteur.id, 'index' : 'vecteur_index'}) }}
{% endblock %}

{% block body %}

    <div class="row justify-content-center">
        <div class="{{ col_primary }}">
            <div class="card ">
                <div class="card-footer">
                    Les informations du vecteur
                </div>
                <div class="card-body">
                    <table class="table table-borderless">
                        <tbody>
                        <tr>
                            <th>Nom</th>
                            <td colspan="2">{{ vecteur.name }}</td>
                        </tr>

                        <tr>
                            <th>Afficher</th>
                            <td class="text-center">
                                {% if vecteur.enable %}
                                    <span class="text-success"><i class="fas fa-eye"></i></span>
                                {% else %}
                                    <span class="text-danger"><i class="fas fa-eye-slash"></i></span>
                                {% endif %}
                            </td>
                        </tr>
                        </tbody>
                    </table>
                </div>
                <div class="card-footer">
                    <div class="row">
                        <div class="col  d-flex justify-content-between align-items-center">

                            <a class="btn btn-secondary " href="{{ path('vecteur_index') }}">
                                <i class="fas fa-folder"></i> Retour Ã  la liste
                            </a>

                            {% if is_granted('ROLE_GESTIONNAIRE') %}
                            <a class="btn btn-info " href="{{ path('vecteur_edit', {'id': vecteur.id}) }}">
                                <i class="fas fa-pencil-alt"></i> Modifier
                            </a>
                            {% endif %}
                            {{ include('share/_delete_form.html.twig',{'domaine': 'vecteur','id':vecteur.id}) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="{{ col_secondary }}">
            <h3 class="text-purple">
                <small><i class="fas fa-bolt"></i></small> Actions
            </h3>
            {% for action in vecteur.actions %}
                {{ include('action/_view/_show_item.html.twig') }}
            {% else %}
                <div class="list-group-item">En attente d'ajout</div>
            {% endfor %}
        </div>


    </div>
{% endblock %}

