{% extends 'base.html.twig' %}

{% block title %} {{ parent() }} Pôle {% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ absolute_url( asset('plugins/datatables-bs4/css/dataTables.bootstrap4.css')) }}">
    <link rel="stylesheet"
          href="{{ absolute_url( asset('plugins/datatables-responsive/css/responsive.bootstrap4.min.css')) }}">
{% endblock %}

{% block body_header %}
    {{ include('admin/_body_header.html.twig', {'domaine': 'Pôle' }) }}
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-12">
                            <table id="tableAdministration" class="table table-striped table-condensed "
                                   style="width:100%">
                                <thead>
                                <tr>
                                    <th class="all">#</th>
                                    <th class="desktop">Plan d'actions</th>
                                    <th class="all">Nom du pôle</th>
                                    <th class="desktop">Description</th>
                                    <th class="desktop text-center">Taux</th>
                                    <th class="desktop text-center">
                                        <i class="fa fa-boxes"  data-toggle="tooltip" data-placement="top" title="Nombre de thématiques"></i>
                                    </th>
                                    <th class="desktop text-center">
                                        <i class="fa fa-boxes"  data-toggle="tooltip" data-placement="top" title="Nombre de catégories"></i>
                                    </th>
                                    <th class="desktop text-center">
                                        <i class="fa fa-bolt" data-toggle="tooltip" data-placement="top"
                                           title="Nombre d'actions'"></i>
                                    </th>
                                    <th class="all text-center"></th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for pole in poles %}
                                    <tr>
                                        <td>{{ pole.id }}</td>
                                        <td class="text-xs col-1">
                                        <span class="text-{{ pole.axe.enable ? 'gray-dark' : 'danger text-bold' }}">
                                            {{ pole.axe.name }}
                                        </span>
                                        </td>
                                        <td>
                                        <span class="text-{{ pole.enable ? 'gray-dark' : 'danger text-bold' }}">
                                            {{ pole.name }}
                                        </span>
                                        </td>
                                        <td>{{ pole.content | raw }}</td>
                                        <td class="text-center">
                                            {{ include('share/_taux_progress_bar_label.html.twig', {'taux1': pole.taux1, 'taux2': pole.taux2  }) }}
                                        </td>
                                        <td class="text-center">
                                            {% if   pole.thematiques.count==0 %}
                                                <span class="text-light"><i class="fas fa-circle"></i></span>
                                            {% else %}
                                                <small class="badge bg-info">{{ pole.thematiques.count }}</small>
                                            {% endif %}
                                        </td>
                                        <td class="text-center">
                                            {% if   pole.thematiques.count==0 %}
                                                <span class="text-light"><i class="fas fa-circle"></i></span>
                                            {% else %}
                                                {% set nbr_t=0 %}
                                                {% for thematique in pole.thematiques %}
                                                    {% set nbr_t = nbr_t + thematique.categories.count %}
                                                {% endfor %}
                                                {% if   nbr_t==0 %}
                                                    <span class="text-light"><i class="fas fa-circle"></i></span>
                                                {% else %}
                                                    <small class="badge bg-info">{{ nbr_t }}</small>
                                                {% endif %}

                                            {% endif %}
                                        </td>
                                        <td class="text-center">
                                            {% if   pole.thematiques.count==0 %}
                                                <span class="text-light"><i class="fas fa-circle"></i></span>
                                            {% else %}
                                                {% set nbr_a=0 %}
                                                {% for thematique in pole.thematiques %}
                                                    {% for category in thematique.categories %}
                                                        {% set nbr_a = nbr_a + category.actions.count %}
                                                    {% endfor %}
                                                {% endfor %}
                                                {% if   nbr_a==0 %}
                                                    <span class="text-light"><i class="fas fa-circle"></i></span>
                                                {% else %}
                                                    <small class="badge bg-info">{{ nbr_a }}</small>
                                                {% endif %}

                                            {% endif %}
                                        </td>
                                        <td class=" d-flex  justify-content-end ">

                                            {{ include('share/__btn_show.html.twig',
                                                {   'url':'pole_show',
                                                    'id':pole.id,
                                                    'mr':true,
                                                    'sm':true,
                                                }) }}

                                            {% if is_granted('ROLE_GESTIONNAIRE') %}
                                                {{ include('share/__btn_edit.html.twig',
                                                    {   'url':'pole_edit',
                                                        'id':pole.id,
                                                        'sm':true,
                                                    }) }}
                                            {% endif %}
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="9">Aucun d'enregistrement</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>

                </div>
                {% if is_granted('ROLE_GESTIONNAIRE') %}
                <div class="card-header">
                    {{ include('share/__btn_new.html.twig',
                        {'url':'pole_new'}) }}
                </div>
                {% endif %}
            </div>
        </div>
    </div>

{% endblock %}


{% block javascripts %}
    <script src="{{ absolute_url( asset('plugins/datatables/jquery.dataTables.js')) }}"></script>
    <script src="{{ absolute_url( asset('plugins/datatables-bs4/js/dataTables.bootstrap4.js')) }}"></script>
    <script src="{{ absolute_url( asset('plugins/datatables-responsive/js/dataTables.responsive.min.js')) }}"></script>
    <script src="{{ absolute_url( asset('plugins/datatables-responsive/js/responsive.bootstrap4.min.js')) }}"></script>
    <script src="{{ absolute_url( asset('js/datatables/pole.js')) }}"></script>
{% endblock %}