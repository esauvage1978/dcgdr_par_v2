<section class=" mt-4 ml-4">
    <div class="card-header">
        <h4 class="card-title text-purple">
            {{ indicatorvalue.indicator.name }}
        </h4>
        <small class="float-right">
            {{ indicatorvalue.indicator.indicatorType | indicatorGetNameOfIndicator }}
        </small>
    </div>
    <div class="card-body">
        <div class="timeline">
            <!-- timeline time label -->
            <div class="time-label">
                <span class="bg-secondary">Cr√©ation</span>
            </div>
            <!-- /.timeline-label -->
            {% for ivh in iv.indicatorValueHistories %}

                <!-- timeline item -->
                <div>
                    <i class="fas fa-external-link-alt "></i>
                    <div class="timeline-item">
                        <div class=" user-block p-2">
                            <img class="img-circle img-bordered-sm" src="{{ ivh.user.avatar.image }}"
                                 alt="user image">
                            <span class="username">
                              <a href="{{ path('user_show',{'id':ivh.user.id }) }}">{{ ivh.user.name }}</a>
                            </span>
                            <span class="description ">
                                <span class="time">
                                    <i class="fas fa-clock"></i> {{ ivh.addedAt | date('d-m-Y') }}
                                </span>
                            </span>
                        </div>
                        <div class="timeline-header pb-5"></div>
                        <div class="timeline-body mt-1">
                            <div class="row">
                                <div class="col-md-12 col-lg-2">
                                    <div class="info-box bg-light">
                                        <div class="info-box-content">
                                            <span class="info-box-text text-center text-muted">Taux</span>
                                            <span class="info-box-number text-center  text-lg mb-0">
                                            {{ include('share/_taux_progress_bar_label.html.twig', {'taux1': ivh.taux1,'taux2': ivh.taux2,'info':false }) }}
                                            </span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-12 col-lg-10">
                                    {{ include('indicatorvalue/_append_show/_' ~ ivh.indicatorvalue.indicator.indicatortype ~ '.html.twig',
                                        {'indicatorvalue':ivh}) }}
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
                <!-- END timeline item -->

            {% endfor %}
            <!-- timeline item -->

            <!-- END timeline item -->
            <div>
                <i class="fas fa-clock bg-gray"></i>
            </div>
        </div>
    </div>
</section>

