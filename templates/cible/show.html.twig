{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} Cibles{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ absolute_url( asset('plugins/datatables-bs4/css/dataTables.bootstrap4.css')) }}">
{% endblock %}

{% block body_header %}
    {{ include('admin/_body_header.html.twig', {'domaine': 'Cibles' , 'id' : cible.id, 'index' : 'cible_index'}) }}
{% endblock %}

{% block body %}

    <div class="row justify-content-center"
    .>
        <div class="{{ col_primary }}">
            <div class="card ">
                <div class="card-body">
                    <table class="table table-borderless">
                        <tbody>
                        <tr>
                            <th>Nom</th>
                            <td colspan="2">{{ cible.name }}</td>
                        </tr>

                        <tr>
                            <th>Afficher</th>
                            <td class="text-center">
                                {% if cible.enable %}
                                    <span class="text-success"><i class="fas fa-eye"></i></span>
                                {% else %}
                                    <span class="text-danger"><i class="fas fa-eye-slash"></i></span>
                                {% endif %}
                            </td>
                        </tr>
                        </tbody>
                    </table>
                </div>
                <div class="card-footer">
                    <div class="row">
                        <div class="col  d-flex justify-content-between align-items-center">
                            {{ include('share/__btn_return_list.html.twig',
                                {   'url':'cible_index'
                                }) }}

                            {% if is_granted('ROLE_GESTIONNAIRE') %}

                                {{ include('share/__btn_edit.html.twig',
                                    {   'url':'cible_edit',
                                        'id':cible.id
                                    }) }}

                            {% endif %}

                            {{ include('share/_delete_form.html.twig',{'domaine': 'cible','id':cible.id}) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="{{ col_secondary }}">
            <h3 class="text-purple">
                <small><i class="fas fa-bolt"></i></small> Actions
            </h3>
                    {% for action in cible.actions %}
                        {{ include('action/_view/_show_item.html.twig') }}
                    {% else %}
                        <div class="list-group-item">En attente d'ajout</div>
                    {% endfor %}
        </div>

    </div>
{% endblock %}

