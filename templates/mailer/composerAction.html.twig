{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} Composez votre message{% endblock %}

{% block stylesheets %}
{% endblock %}

{% block body_header %}
    <div class="col">
        <h2 class="m-0 text-dark">Composez votre message </h2>
    </div>
    <div class="col">
        <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="{{ path('home') }}">Page d'accueil</a></li>
            <li class="breadcrumb-item active">Action {{ action.id }}</li>
        </ol>
    </div>
{% endblock %}

{% block sidebar_sommaire %}
{% endblock %}
{% block sidebar_button %}
    {{ include('share/__btn_show.html.twig',
        {   'url':'action_show',
            'id':action.id,
            'titre':'Consulter l\'action'
        }) }}



    {% if action | actionCanUpdate %}
        <span class="mb-3"></span>
        {{ include('share/__btn_edit.html.twig',
            {   'url':'action_edit',
                'id':action.id,
                'titre':'Editer l\'action'
            }) }}
    {% endif %}



    <span class="mb-3"></span>

    <a href="{{ path('mailer_action_history',{'id': action.id }) }}" class="btn btn-link bg-yellow">
        <i class="fa fa-history"></i> Historique des messages
    </a>
{% endblock %}

{% block body %}

    <div class="row justify-content-center">

        <div class="{{ col_primary }}">
            {{ form_start(form) }}
            <div class="card ">
                <div class="card-body">
                    <h6 class="text-purple ">
                        Valideurs
                    </h6>
                    <div class="card-body pt-0">
                        <div class="form-group row">
                            {{ form_widget(form.actionvalider) }}
                        </div>
                    </div>
                    <h6 class="text-purple ">
                        Pilotes de l'action
                    </h6>
                    <div class="card-body pt-0">
                        <div class="form-group row">
                            {{ form_widget(form.actionwriter) }}
                        </div>
                    </div>
                    <h6 class="text-purple ">
                        Pilotes des d√©ploiements
                    </h6>
                    <div class="card-body pt-0">
                        <div class="form-group row">
                            {{ form_widget(form.deployementwriter) }}
                        </div>
                    </div>

                    <h6 class="text-purple ">
                        Mail
                    </h6>
                    <div class="card-body pt-0">
                        <div class="form-group row">
                            {{ form_widget(form.subject) }}
                        </div>
                        <div class="form-group row">
                            {{ form_widget(form.content) }}
                        </div>

                    </div>
                </div>
            </div>
            <div class="card ">
                <div class="card-footer">
                    <div class="float-right">
                        <button type="submit" class="btn btn-primary"><i class="far fa-envelope"></i> Envoyer</button>
                    </div>
                    <a href="{{ path("mailer_action_composer",{'id':action.id}) }}" class="btn btn-default">
                        <i class="fas fa-times"></i> Annuler
                    </a>
                </div>
            </div>
            {{ form_end(form) }}
        </div>

    </div>

{% endblock %}

{% block javascripts %}
    <script src="{{ absolute_url( asset('js/add_sidebar.js')) }}"></script>
{% endblock %}
