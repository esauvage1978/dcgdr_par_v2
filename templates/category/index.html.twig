{% extends 'base.html.twig' %}

{% block title %} {{ parent() }} Catégorie {% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ absolute_url( asset('plugins/datatables-bs4/css/dataTables.bootstrap4.css')) }}">
    <link rel="stylesheet"
          href="{{ absolute_url( asset('plugins/datatables-responsive/css/responsive.bootstrap4.min.css')) }}">
{% endblock %}

{% block body_header %}
    {{ include('admin/_body_header.html.twig', {'domaine': 'Catégorie' }) }}
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-12">
                            <table id="tableAdministration" class="table table-striped table-condensed "
                                   style="width:100%">
                                <thead>
                                <tr>
                                    <th class="all">#</th>
                                    <th class="desktop">Classement</th>
                                    <th class="desktop text-center">Code</th>
                                    <th class="all">Catégorie</th>
                                    <th class="desktop">Description</th>
                                    <th class="desktop text-center">Actions</th>
                                    <th class="desktop text-center">Taux</th>
                                    <th class="all text-center"></th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for category in categories %}
                                    <tr>
                                        <td>{{ category.id }}</td>
                                        <td class="text-xs ">
                                            <small>
                                            <span class="text-{{ category.thematique.pole.axe.enable ? 'gray-dark' : 'danger text-bold' }}">
                                                {{ category.thematique.pole.axe.name }}
                                            </span>
                                        <br/>
                                            <span class="text-{{ category.thematique.pole.enable ? 'gray-dark' : 'danger text-bold' }}">
                                                {{ category.thematique.pole.name }}
                                            </span>
                                            <br/>

                                            <span class="text-{{ category.thematique.enable ? 'gray-dark' : 'danger text-bold' }}">
                                                {{ category.thematique.fullName }}
                                            </span>
                                            </small>
                                        </td>
                                        <td class="text-center text-{{ category.enable ? 'gray-dark' : 'danger text-bold' }}">
                                                {{ category.ref }}
                                        </td>
                                        <td  class="text-{{ category.enable ? 'gray-dark' : 'danger text-bold' }}">
                                                {{ category.name }}
                                        </td>

                                        <td class="text-center">
                                            {{ category.content |raw }}
                                        </td>
                                        <td class="text-center">
                                            {{ include('share/_taux_progress_bar_label.html.twig', {'taux1': category.taux1, 'taux2': category.taux2  }) }}
                                        </td>
                                        <td class=" d-flex  justify-content-end ">

                                            {{ include('share/__btn_show.html.twig',
                                                {   'url':'category_show',
                                                    'id':category.id,
                                                    'mr':true,
                                                    'sm':true,
                                                }) }}

                                            {% if is_granted('ROLE_GESTIONNAIRE') %}
                                                {{ include('share/__btn_edit.html.twig',
                                                    {   'url':'category_edit',
                                                        'id':category.id,
                                                        'sm':true,
                                                    }) }}
                                            {% endif %}
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="9">Aucun d'enregistrement</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>

                </div>
                {% if is_granted('ROLE_GESTIONNAIRE') %}
                <div class="card-header">
                    {{ include('share/__btn_new.html.twig',
                        {'url':'category_new'}) }}
                </div>
                {% endif %}
            </div>
        </div>
    </div>

{% endblock %}


{% block javascripts %}
    <script src="{{ absolute_url( asset('plugins/datatables/jquery.dataTables.js')) }}"></script>
    <script src="{{ absolute_url( asset('plugins/datatables-bs4/js/dataTables.bootstrap4.js')) }}"></script>
    <script src="{{ absolute_url( asset('plugins/datatables-responsive/js/dataTables.responsive.min.js')) }}"></script>
    <script src="{{ absolute_url( asset('plugins/datatables-responsive/js/responsive.bootstrap4.min.js')) }}"></script>
    <script src="{{ absolute_url( asset('js/datatables/category.js')) }}"></script>

{% endblock %}