<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>{% block title %}DCGDR PAR - {% endblock %}</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Font Awesome -->

    <link rel="stylesheet" href="{{ absolute_url( asset('plugins/fontawesome-free/css/all.min.css')) }}">
    <!-- summernote -->
    <link rel="stylesheet" href="{{ absolute_url( asset('plugins/summernote/summernote-bs4.css')) }}">
    <!-- Tempusdominus Bbootstrap 4 -->
    <link rel="stylesheet"
          href="{{ absolute_url( asset('plugins/tempusdominus-bootstrap-4/css/tempusdominus-bootstrap-4.min.css')) }}">
    <!-- Theme style -->
    <link rel="stylesheet" href="{{ absolute_url( asset('dist/css/adminlte.min.css')) }}">
    <!-- overlayScrollbars -->
    <link rel="stylesheet" href="{{ absolute_url( asset('plugins/overlayScrollbars/css/OverlayScrollbars.min.css')) }}">

    {% block stylesheets %}{% endblock %}
</head>
<body class="hold-transition sidebar-mini layout-fixed sidebar-collapse ">
<div class="wrapper">


    {{ include('structure/_nav_top.html.twig') }}
    <!-- Main Sidebar Container -->
    {{ include('structure/_nav_left.html.twig') }}

    {% block sidebar %}
        <aside id="sidebar" class="control-sidebar control-sidebar-dark navbar-dark ">
            <!-- Control sidebar content goes here -->
            <div class="pt-3 control-sidebar-content">
                <h5 class="pt-5"></h5>
                <div class="card card-dark">
                    <div class="card-header">
                        <h3 class="card-title">Sommaire</h3>

                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse"><i class="fas fa-minus"></i>
                            </button>
                        </div>
                    </div>
                    <div class="card-body p-0 bg-dark">
                        <ul id="sommaire" class="list-unstyled collapse show">
                            {% block sidebar_sommaire %}
                                sommaire_content
                            {% endblock %}
                        </ul>
                    </div>
                </div>
                <hr>
                <!-- action -->
                <div class=" d-flex flex-column pl-3 pr-3">
                    {% block sidebar_button %}
                        button_content
                    {% endblock %}
                </div>

            </div>
        </aside>
    {% endblock %}
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper mt-5">
        <!-- Content Header (Page header) -->
        <div class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    {% block body_header %}{% endblock %}
                </div><!-- /.row -->
            </div><!-- /.container-fluid -->
        </div>
        <!-- /.content-header -->

        <!-- Main content -->
        <section class="content " id="section_body">
            <div class="container-fluid ">
                <div id="alert">
                    {% for label, messages in app.flashes %}
                        {% for message in messages %}
                            <div class="alert alert-{{ label }}">
                                {{ message |raw }}
                            </div>
                        {% endfor %}
                    {% endfor %}
                </div>
                {% set col_primary="col-sm-12 col-md-8 col-lg-8 col-xl-6" %}
                {% set col_secondary="col-sm-12 col-md-4 " %}
                {% set col_primary_9="col-sm-12 col-md-9" %}
                {% set col_secondary_3="col-sm-12 col-md-3" %}

                {% block body %}{% endblock %}
            </div>
        </section>

        <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->
    {{ include('structure/_footer.html.twig') }}

</div>
<!-- ./wrapper -->

<!-- jQuery -->
<script src="{{ absolute_url( asset('plugins/jquery/jquery.min.js')) }}"></script>
<!-- jQuery UI 1.11.4 -->
<script src="{{ absolute_url( asset('plugins/jquery-ui/jquery-ui.min.js')) }}"></script>
<!-- Resolve conflict in jQuery UI tooltip with Bootstrap tooltip -->
<script>
    $.widget.bridge('uibutton', $.ui.button)
</script>
<!-- Tootip -->
<script src="{{ absolute_url( asset('plugins/popper/popper.min.js')) }}"></script>
<script src="{{ absolute_url( asset('plugins/popper/popper-utils.min.js')) }}"></script>
<!-- Bootstrap 4 -->
<script src="{{ absolute_url( asset('plugins/bootstrap-4.4.1-dist/js/bootstrap.bundle.min.js')) }}"></script>

<!-- jQuery Knob Chart -->
<script src="{{ absolute_url( asset('plugins/jquery-knob/jquery.knob.min.js')) }}"></script>
<!-- Tempusdominus Bootstrap 4 -->
<script src="{{ absolute_url( asset('plugins/tempusdominus-bootstrap-4/js/tempusdominus-bootstrap-4.min.js')) }}"></script>
<!-- overlayScrollbars -->
<script src="{{ absolute_url( asset('plugins/overlayScrollbars/js/jquery.overlayScrollbars.min.js')) }}"></script>
<!-- AdminLTE App -->
<script src="{{ absolute_url( asset('dist/js/adminlte.js')) }}"></script>
<!-- AdminLTE dashboard demo (This is only for demo purposes) -->
<script src="{{ absolute_url( asset('dist/js/pages/dashboard.js')) }}"></script>

<!-- AdminLTE for demo purposes -->
<!-- Summernote -->
<script src="{{ absolute_url( asset('plugins/summernote/summernote-bs4.min.js')) }}"></script>
<script src="{{ absolute_url( asset('js/switch_sidebar.js')) }}"></script>
<script>
    $(function () {
        // Summernote
        $('.textarea').summernote();

        $('div.form-check').addClass('icheck-primary d-inline');

        //Initialize Select2 Elements
        $('.select2').select2({
            theme: 'bootstrap4'
        });

        $('.select2-selection__choice').addClass('bg-light');

        $('[data-toggle="tooltip"]').tooltip();
    })
</script>
{% block javascripts %}{% endblock %}
</body>
</html>
