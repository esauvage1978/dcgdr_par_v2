<table id="tableAdministration" class="table table-striped table-condensed bg-white"
       style="width:100%">
    <thead>
    <tr>
        <th class="all  text-center align-middle">#</th>
        <th class="desktop  text-center align-middle">Plan d'actions</th>
        <th class="all  text-center align-middle">Action</th>
        <th class="all  align-middle">Organisme</th>
        <th class="all text-center align-middle">Fin de d√©ploiement</th>
        <th class="all text-center align-middle">Jalon</th>
        <th class="desktop text-center align-middle">Indicateur</th>
        <th class="desktop text-center align-middle">Taux</th>
        <th class="all text-center"></th>
    </tr>
    </thead>
    <tbody>
    {% for deployement in deployements %}
        <tr>
            <td class="text-center align-middle">
                {{ deployement.action.category.thematique.ref }}
                -{{ deployement.action.category.ref }}-{{ deployement.action.ref }}
                <br/>
                <small class="text-muted">{{ deployement.id }}</small>
            </td>
            <td class="text-xs  align-middle">
                {{ deployement.action.category.thematique.pole.axe.name }}
                <br/>
                {{ deployement.action.category.thematique.pole.name }}
                <br/>
                {{ deployement.action.category.thematique.name }}
                <br/>
                {{ deployement.action.category.name }}
            </td>
            <td class="align-middle">
                {% if deployement.action | actionCanRead %}
                    <a href="{{ path('action_show', {'id': deployement.action.id}) }}">
                        {{ deployement.action.name }}
                    </a>
                {% else %}
                    {{ deployement.action.name }}
                {% endif %}

            </td>
            <td class="align-middle">
                {{ deployement.organisme.name }}
            </td>
            <td class="text-center  align-middle">
                {{ include('action/_view/_regionendat.html.twig',{'regionendat':deployement.action.regionendat}) }}
            </td>
            <td class="text-center  align-middle">
                {{ include('deployement/_view/_jalon.html.twig') }}
            </td>
            <td class="text-center  align-middle">

                {% set nbr=deployement.indicatorValues | sumEnable %}
                {% if  nbr==0 %}
                    <span class="text-light"><i class="fas fa-circle"></i></span>
                {% else %}
                    <small class="badge bg-info">{{ nbr }}</small>
                {% endif %}
            </td>
            <td class="text-center  align-middle">
                {{ include('share/_taux_progress_bar_label.html.twig', {'taux1': deployement.taux1, 'taux2': deployement.taux2  }) }}
            </td>
            <td class="align-middle">


                {{ include('share/__btn_append.html.twig',
                    {   'url':'deployement_append_edit',
                        'id':deployement.id,
                        'sm':true
                    }) }}

            </td>
        </tr>
    {% else %}
        <tr>
            <td colspan="9">Aucun d'enregistrement</td>
        </tr>
    {% endfor %}
    </tbody>
</table>