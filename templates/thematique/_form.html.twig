<div class="card-body">
    {% if thematique.pole.axe is defined %}
        <div class="form-group row">
            <label class="col-sm-3 col-form-label">Plan d'actions</label>
            <div class="col">
                <a href="{{ path('axe_show', {'id': thematique.pole.axe.id}) }}">
                    {{ thematique.pole.axe.name }}
                </a>
            </div>
        </div>
    {% endif %}
    <div class="form-group row">
        {{ form_label(form.pole,'', { 'label_attr': {'class':'col-sm-3 col-form-label' }}) }}
        <div class="col">
            {{ form_errors(form.pole) }}
            {{ form_widget(form.pole) }}
        </div>
    </div>
    <div class="form-group row">
        {{ form_label(form.name,'', { 'label_attr': {'class':'col-sm-3 col-form-label' }}) }}
        <div class="col">
            {{ form_errors(form.name) }}
            {{ form_widget(form.name) }}
        </div>
    </div>
    <div class="form-group row">
        {{ form_label(form.ref,'', { 'label_attr': {'class':'col-sm-3 col-form-label' }}) }}
        <div class="col">
            {{ form_errors(form.ref) }}
            {{ form_widget(form.ref) }}
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-3 col-form-label" for="{{ form.enable.vars.id }}">
            Afficher
        </label>
        <div class="col mt-1">
            {{ form_row(form.enable) }}
        </div>
    </div>


    {{ form_row(form.content) }}


    <div class="d-none">
        <button name="update" id="update">{{ button_label|default('Save') }}</button>
    </div>

</div>