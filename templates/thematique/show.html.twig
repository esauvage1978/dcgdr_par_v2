{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} Thématique{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ absolute_url( asset('plugins/datatables-bs4/css/dataTables.bootstrap4.css')) }}">
{% endblock %}

{% block body_header %}
    {{ include('admin/_body_header.html.twig', {'domaine': 'Thématique' , 'id' : thematique.id, 'index' : 'thematique_index'}) }}
{% endblock %}

    {% block body %}

<div class="row justify-content-center">
    <div class="{{ col_primary }} ">
        <div class="card ">
            <div class="card-body">
                <table class="table table-borderless">
                    <tbody>
                    <tr>
                        <th>Plan d'actions</th>
                        <td colspan="2">
                            <a href="{{ path('axe_show', {'id': thematique.pole.axe.id}) }}">
                                {{ thematique.pole.axe.name }}
                            </a>
                        </td>
                    </tr>
                    <tr>
                        <th>Pôle</th>
                        <td colspan="2">
                            <a href="{{ path('pole_show', {'id': thematique.pole.id}) }}">
                                {{ thematique.pole.name }}
                            </a>
                        </td>
                    </tr>
                    <tr>
                        <th>Nom</th>
                        <td colspan="2">{{ thematique.name }}</td>
                    </tr>
                    <tr>
                        <th>Code</th>
                        <td colspan="2">{{ thematique.ref }}</td>
                    </tr>
                    <tr>
                        <th>Afficher</th>
                        <td class="text-center">
                            {% if thematique.enable %}
                                <span class="text-success"><i class="fas fa-eye"></i></span>
                            {% else %}
                                <span class="text-danger"><i class="fas fa-eye-slash"></i></span>
                            {% endif %}
                        </td>
                    </tr>

                    {{ include('share/_taux_tr_progress_bar_label.html.twig', {'taux1': thematique.taux1,'taux2': thematique.taux2 }) }}

                    {% if thematique.content %}
                    <tr>
                        <th>Description</th>
                        <td colspan="2">{{ thematique.content | raw }}</td>
                    </tr>
                    {% endif %}
                    </tbody>
                </table>
            </div>
            <div class="card-footer">
                <div class="row">
                    <div class="col  d-flex justify-content-between align-items-center">
                        {{ include('share/__btn_return_list.html.twig',
                            {   'url':'thematique_index'
                            }) }}

                        {% if is_granted('ROLE_GESTIONNAIRE') %}

                            {{ include('share/__btn_edit.html.twig',
                                {   'url':'thematique_edit',
                                    'id':thematique.id
                                }) }}

                        {% endif %}

                        {{ include('share/_delete_form.html.twig',{'domaine': 'thematique','id':thematique.id}) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="{{ col_secondary }}">

    </div>
</div>

{% endblock %}
