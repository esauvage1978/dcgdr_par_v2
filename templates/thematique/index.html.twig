{% extends 'base.html.twig' %}

{% block title %} {{ parent() }} Thématique {% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ absolute_url( asset('plugins/datatables-bs4/css/dataTables.bootstrap4.css')) }}">
    <link rel="stylesheet"
          href="{{ absolute_url( asset('plugins/datatables-responsive/css/responsive.bootstrap4.min.css')) }}">
{% endblock %}

{% block body_header %}
    {{ include('admin/_body_header.html.twig', {'domaine': 'Thématique' }) }}
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-12">
                            <table id="tableAdministration" class="table table-striped table-condensed "
                                   style="width:100%">
                                <thead>
                                <tr>
                                    <th class="all">#</th>
                                    <th class="desktop">Classement</th>
                                    <th class="all">Réf.</th>
                                    <th class="all">Thématique</th>
                                    <th class="desktop">Description</th>
                                    <th class="desktop text-center">Taux</th>
                                    <th class="desktop text-center">
                                        <i class="fa fa-boxes"  data-toggle="tooltip" data-placement="top" title="Nombre de catégories"></i>
                                    </th>
                                    <th class="desktop text-center">
                                        <i class="fa fa-bolt" data-toggle="tooltip" data-placement="top"
                                           title="Nombre d'actions'"></i>
                                    </th>
                                    <th class="all text-center"></th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for thematique in thematiques %}
                                    <tr>
                                        <td>
                                            {{ thematique.id }}
                                        </td>
                                        <td class="text-xs">
                                            <small>
                                                <span class="text-{{ thematique.pole.axe.enable ? 'gray-dark' : 'danger text-bold' }}">
                                                    {{ thematique.pole.axe.name }}
                                                </span>
                                                <br/>
                                                <span class="text-{{ thematique.pole.enable ? 'gray-dark' : 'danger text-bold' }}">
                                                {{ thematique.pole.name }}
                                                </span>
                                            </small>
                                        </td>
                                        <td class="text-center">
                                            {{ thematique.ref }}
                                        </td>
                                        <td>
                                        <span class="text-{{ thematique.enable ? 'gray-dark' : 'danger text-bold' }}">
                                            {{ thematique.name }}
                                        </span>
                                        </td>
                                        <td>{{ thematique.content | raw }}</td>

                                        <td class="text-center">
                                            {{ include('share/_taux_progress_bar_label.html.twig', {'taux1': thematique.taux1, 'taux2': thematique.taux2  }) }}
                                        </td>
                                        <td class="text-center">
                                            {% if   thematique.categories.count==0 %}
                                                <span class="text-light"><i class="fas fa-circle"></i></span>
                                            {% else %}
                                                <small class="badge bg-info">{{ thematique.categories.count }}</small>
                                            {% endif %}
                                        </td>
                                        <td class="text-center">
                                            {% if   thematique.categories.count==0 %}
                                                <span class="text-light"><i class="fas fa-circle"></i></span>
                                            {% else %}
                                                {% set nbr_t=0 %}
                                                {% for category in thematique.categories %}
                                                    {% set nbr_t = nbr_t + category.actions.count %}
                                                {% endfor %}
                                                {% if   nbr_t==0 %}
                                                    <span class="text-light"><i class="fas fa-circle"></i></span>
                                                {% else %}
                                                    <small class="badge bg-info">{{ nbr_t }}</small>
                                                {% endif %}

                                            {% endif %}
                                        </td>
                                        <td class=" d-flex  justify-content-end ">

                                            {{ include('share/__btn_show.html.twig',
                                                {   'url':'thematique_show',
                                                    'id':thematique.id,
                                                    'mr':true,
                                                    'sm':true,
                                                }) }}

                                            {% if is_granted('ROLE_GESTIONNAIRE') %}
                                                {{ include('share/__btn_edit.html.twig',
                                                    {   'url':'thematique_edit',
                                                        'id':thematique.id,
                                                        'sm':true,
                                                    }) }}
                                            {% endif %}
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="9">Aucun d'enregistrement</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>

                </div>
                {% if is_granted('ROLE_GESTIONNAIRE') %}
                    <div class="card-header">
                        {{ include('share/__btn_new.html.twig',
                            {'url':'thematique_new'}) }}
                    </div>
                {% endif %}
            </div>
        </div>
    </div>

{% endblock %}


{% block javascripts %}
    <script src="{{ absolute_url( asset('plugins/datatables/jquery.dataTables.js')) }}"></script>
    <script src="{{ absolute_url( asset('plugins/datatables-bs4/js/dataTables.bootstrap4.js')) }}"></script>
    <script src="{{ absolute_url( asset('plugins/datatables-responsive/js/dataTables.responsive.min.js')) }}"></script>
    <script src="{{ absolute_url( asset('plugins/datatables-responsive/js/responsive.bootstrap4.min.js')) }}"></script>
    <script src="{{ absolute_url( asset('js/datatables/thematique.js')) }}"></script>
{% endblock %}