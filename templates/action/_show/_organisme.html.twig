<!-- déployement -->
<h3 id="anchor_organisme" class="text-purple">
    <small><i class="fas fa-city"></i></small> Organismes concernés <small> par le déploiement des indicateurs</small>
</h3>
<section class="col-sm-12">
    {% if action.deployements.count == 0 %}
        <article class="card-body">
            <div class="mt-4 p-3 col-12 bg-light">
                <span class="text-muted">
                    Il n'y a pas encore d'organisme associé à cette action
                </span>
            </div>
        </article>
    {% else %}

        <div class="card card-info card-outline mt-4 ml-4">

            <table id="tableAdministration" class="table table-striped table-condensed "
                   style="width:100%">
                {% for deployement in action.deployements %}
                    <tr>
                        <td class="align-middle">{{ deployement.organisme.fullname }}</td>
                        <td class="text-center align-middle ">
                            {{ include('share/_taux_progress_bar_label.html.twig' , {'taux1': deployement.taux1,'taux2': deployement.taux2} ) }}
                        </td>
                        <td class="text-center align-middle">
                            {% set nbr= deployement | organismeIndicateurDeployed %}
                            {% if  nbr==0 %}
                                <span class="text-light" ><i class="fas fa-circle"></i></span>
                            {% else %}
                                <small class="badge bg-info"><i class="fas fa-chart-line"></i> {{ nbr }}</small>
                            {% endif %}
                        </td>

                        <td class="text-right align-middle">
                            {% if deployement | deployementCanAppendUpdate %}
                                {{ include('share/__btn_append.html.twig',
                                    {   'url':'deployement_append_edit',
                                        'id':deployement.id,
                                        'sm':true
                                    }) }}
                            {% endif %}

                            {% if deployement | deployementCanAppendUpdate %}
                            {{ include('share/__btn_show.html.twig',
                                {   'url':'deployement_append',
                                    'id':deployement.id,
                                    'sm':true
                                }) }}
                            {% endif %}

                            {% if deployement | deployementCanUpdate and deployement.action.state!='cotech'  %}
                                {{ include('share/__btn_edit.html.twig',
                                    {   'url':'deployement_edit',
                                        'id':deployement.id,
                                        'sm':true
                                    }) }}
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}
            </table>
        </div>

    {% endif %}
</section>