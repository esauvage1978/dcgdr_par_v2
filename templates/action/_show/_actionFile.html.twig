{% if action.actionFiles.count != 0 or action.actionLinks.count != 0 %}

<article id="file" class="bg-white">
    <h5 class="text-purple p-1 pt-3 text-center ">
        documents joints
    </h5>
    <div class="card-body">

        <ul  class="list-group list-group-flush">


            {% for actionFile in action.actionFiles %}
                <li  class="list-group-item">
                    <a target="_blank" href="{{ path('action_file_show',{'id':action.id, 'fileId':actionFile.id}) }}" >
                        {{ include('file/_icone_extension.html.twig',{'extension': actionFile.fileExtension})}}
                        {{ actionFile.title  }}.{{ actionFile.fileExtension  }}
                    </a>
                </li>
            {% endfor %}
            {% for actionLink in action.actionLinks %}
                <li  class="list-group-item">
                    <a target="_blank" href="{{ actionLink.link }}" >
                        <i class="fas fa-globe mr-2"></i>
                         {{ actionLink.title  }}
                    </a>
                </li>
            {% endfor %}
        </ul>
    </div>
</article>
{% endif %}