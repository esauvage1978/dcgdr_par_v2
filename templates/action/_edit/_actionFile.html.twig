<article id="file" class="bg-white">
    <h5 class="text-purple p-1 pt-3 text-center ">
        documents joints
    </h5>
    <div class="card-body">


        <input type="hidden" id="filecount" value="{{ action.actionFiles | length }}"/>
        <input type="hidden" id="linkcount" value="{{ action.actionLinks | length }}"/>

        <table id="file-media" class="table table-striped table-condensed "
               style="width:100%">
            {% for actionFile in action.actionFiles %}
                <tr id="media-{{ actionFile.fileName }}">
                    <td>
                        <a type="button" class="text-primary" target="_blank"  href="{{ absolute_url( asset(actionFile.href)) }}">
                            {{ include('file/_icone_extension.html.twig',{'extension': actionFile.fileExtension}) }}
                        </a>
                    </td>
                    <td>
                        <a type="button" class="text-primary" target="_blank"  href="{{ absolute_url( asset(actionFile.href)) }}">
                            {{ actionFile.title }}
                        </a>
                    </td>
                    <td class="float-right" style="width: 100px">
                        <button class="media-delete btn btn-danger btn-sm "
                                data-msg="actionFile_{{ loop.index0 }}"
                                data-media="{{ actionFile.fileName }}">
                            <i class="fas fa-trash"></i>
                        </button>
                        <span class="media-edit btn btn-info  btn-sm"
                              onclick="showOtherFile({{ loop.index0 }})">
                            <i class="fas fa-edit"></i>
                        </span>
                    </td>
                </tr>
                <tr id="actionFile_{{ loop.index0 }}" class="d-none">
                    <td colspan="3">
                        {{ form_widget(form.actionFiles[loop.index0]) }}
                    </td>
                </tr>
            {% endfor %}
            {% for actionLink in action.actionLinks %}
                <tr id="media-{{ actionLink.id }}">
                    <td>
                        <a type="button" class="text-primary" target="_blank" href="{{ actionLink.link }}">
                            <i class="fas fa-globe"></i>
                        </a>
                    </td>
                    <td>
                        <a type="button" class="text-primary" target="_blank"  href="{{ actionLink.link }}">
                            {{ actionLink.title }}
                        </a>
                    </td>
                    <td class="float-right" style="width: 100px">
                        <button class="media-delete btn btn-danger btn-sm "
                                data-msg="actionLink_{{ loop.index0 }}"
                                data-media="{{ actionLink.id }}">
                            <i class="fas fa-trash"></i>
                        </button>
                        <span class="media-edit btn btn-info  btn-sm"
                              onclick="showOtherLink({{ loop.index0 }})">
                            <i class="fas fa-edit"></i>
                        </span>
                    </td>
                </tr>
                <tr id="actionLink_{{ loop.index0 }}" class="d-none">
                    <td colspan="3">
                        {{ form_widget(form.actionLinks[loop.index0]) }}
                    </td>
                </tr>
            {% endfor %}
        </table>

        <div id="media-new">
            <div class="row">
                <div class="col-12 media-add" id="media-add-file"
                     data-prototype="{{ form_row(form.actionFiles.vars.prototype) | e('html_attr') }}">
                </div>
                <div class="col-12 media-add" id="media-add-link"
                     data-prototype="{{ form_row(form.actionLinks.vars.prototype) | e('html_attr') }}">
                </div>
            </div>
        </div>
        <div class="pt-4 pb-3">
            <a href="#file" id="add-file" class="btn btn-dark">Ajouter un fichier</a>
            <a href="#link" id="add-link" class="btn btn-dark">Ajouter un lien</a>
        </div>

    </div>
</article>