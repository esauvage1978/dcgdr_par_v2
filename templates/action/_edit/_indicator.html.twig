<!-- indicateur -->
<h3 id="anchor_indicateur" class="text-purple">
    <small><i class="fas fa-city"></i></small> Indicateurs
</h3>
<section class="col-sm-12 p-3 mb-3">
    <div class="card ">
        {% if action.indicators.count == 0 %}
            <article class="card-body">
                <div class="mt-4 p-3 col-12 bg-light">
                <span class="text-muted">
                    Il n'y a pas encore d'organisme associé à cette action
                </span>
                </div>
            </article>
        {% else %}
            <table id="tableAdministration" class="table table-striped table-condensed "
                   style="width:100%">
                {% for indicator in action.indicators %}
                    <tr>
                        <td class="align-middle">
                            <span class="text-{{ indicator.enable ? 'primary' : 'danger text-bold' }}">
                                {{ indicator.name }}
                            </span>
                            <small class="float-right">{{indicator.indicatorType | indicatorGetNameOfIndicator}}</small>
                            <p>
                            <small>{{indicator.content | raw }}</small>
                            </p>
                        </td>

                        <td class="text-center align-middle col-2">
                            {{ include('share/_taux_progress_bar_label.html.twig' , {'taux1': indicator.taux1,'taux2': indicator.taux2} ) }}
                        </td>
                        <td class="text-right align-middle">
                            {% if indicator | indicatorCanUpdate %}
                                {{ include('share/__btn_edit.html.twig',
                                    {   'url':'indicator_edit',
                                        'id':indicator.id,
                                        'sm':true
                                    }) }}
                            {% endif %}

                        </td>
                    </tr>
                {% endfor %}
            </table>
        {% endif %}

        <div class="card-footer">
            <div class="col  d-flex justify-content-center align-items-center p-1">
                <a class="btn btn-success" href="{{ path('indicator_new',{'id':action.id}) }}"
                   data-html="true"
                   data-toggle="tooltip" data-placement="top" title="Ce bouton permet d'ajouter un indicateur à l'action"
                >
                    <i class="fas fa-plus"></i> Ajouter un indicateur
                </a>
            </div>
        </div>
    </div>
</section>
