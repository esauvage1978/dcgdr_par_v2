<!-- Intervenants -->
<section id="anchor_intervenant" class="bg-white">
    <h5 class="text-purple p-1  text-center ">
        Intervenants
    </h5>
    <div class="card-body">
        <div class="form-group row">
            <label for="{{ form.validers.vars.id }}">
                Valideur
            </label>
            {{ form_widget(form.validers) }}
        </div>
        <div class="form-group row">
            <label for="{{ form.writers.vars.id }}">
                Pilote
            </label>
            {{ form_widget(form.writers) }}
        </div>
        <div class="form-group row">
            <label for="{{ form.readers.vars.id }}">
                Consultant
            </label>
            {{ form_widget(form.readers) }}
        </div>
        <div class="form-group row m-2">
            <label class="col-sm-10 col-form-label"
                   for="{{ form.showall.vars.id }}">
                Visible par tous
            </label>
            <div class="col mt-1">
                {{ form_row(form.showall) }}
            </div>
        </div>
    </div>
</section>