<!-- organisme -->
<h3 id="anchor_organisme" class="text-purple">
    <small><i class="fas fa-city"></i></small> Organismes concernés <small> par le déploiement des indicateurs</small>
</h3>
<section class="col-sm-12 p-3 mb-3">
    <div class="card ">
        {% if action.deployements.count == 0 %}
            <article class="card-body">
                <div class="mt-4 p-3 col-12 bg-light">
                <span class="text-muted">
                    Il n'y a pas encore d'organisme associé à cette action
                </span>
                </div>
            </article>
        {% else %}
            <table id="tableAdministration" class="table table-striped table-condensed "
                   style="width:100%">
                {% for deployement in action.deployements %}
                    <tr>
                        <td class="align-middle">{{ deployement.organisme.fullname }}</td>
                        <td class="text-center align-middle col-2">
                            {{ include('share/_taux_progress_bar_label.html.twig' , {'taux1': deployement.taux1,'taux2': deployement.taux2} ) }}
                        </td>
                        <td class="text-right align-middle">
                            {% if deployement | deployementCanUpdate %}
                                {{ include('share/__btn_edit.html.twig',
                                    {   'url':'deployement_edit',
                                        'id':deployement.id,
                                        'sm':true
                                    }) }}
                            {% endif %}

                        </td>
                    </tr>
                {% endfor %}
            </table>

        {% endif %}
        <div class="card-footer">
            <div class="col  d-flex justify-content-center align-items-center p-1">
                <a class="btn btn-info "
                   href="{{ path('deployements_for_action', {'id': action.id}) }}">
                    <i class="fas fa-warehouse"></i> Sélection des organismes
                </a>
            </div>
        </div>
    </div>
</section>