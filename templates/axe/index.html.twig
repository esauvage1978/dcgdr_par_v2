{% extends 'base.html.twig' %}

{% block title %} {{ parent() }} Plan d\'actions {% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ absolute_url( asset('plugins/datatables-bs4/css/dataTables.bootstrap4.css')) }}">
    <link rel="stylesheet"
          href="{{ absolute_url( asset('plugins/datatables-responsive/css/responsive.bootstrap4.min.css')) }}">
{% endblock %}

{% block body_header %}
    {{ include('admin/_body_header.html.twig', {'domaine': 'Plan d\'actions' }) }}
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-12">
                            <table id="tableAdministration" class="table table-striped table-condensed "
                                   style="width:100%">
                                <thead>
                                <tr>
                                    <th class="all">#</th>
                                    <th class="all">Nom</th>
                                    <th class="desktop">
                                        Description
                                    </th>
                                    <th class="desktop text-center">Taux</th>
                                    <th class="desktop text-center">
                                        <i class="fa fa-file-archive" data-toggle="tooltip" data-placement="top"
                                           title="Archive"></i>
                                    </th>
                                    <th class="desktop text-center">
                                        <i class="fa fa-boxes" data-toggle="tooltip" data-placement="top"
                                           title="Nombre de Pôles"></i>
                                    </th>
                                    <th class="desktop text-center">
                                        <i class="fa fa-boxes" data-toggle="tooltip" data-placement="top"
                                           title="Nombre de Thématiques"></i>
                                    </th>
                                    <th class="desktop text-center">
                                        <i class="fa fa-boxes" data-toggle="tooltip" data-placement="top"
                                           title="Nombre de Catégories"></i>
                                    </th>
                                    <th class="all text-center"></th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for axe in axes %}
                                    <tr>
                                        <td>{{ axe.id }}</td>
                                        <td>
                                        <span class="text-{{ axe.enable ? 'gray-dark' : 'danger text-bold' }}">
                                            {{ axe.name }}
                                        </span>
                                        </td>
                                        <td>{{ axe.content | raw }}</td>

                                        <td class="text-center">
                                            {{ include('share/_taux_progress_bar_label.html.twig', {'taux1': axe.taux1, 'taux2': axe.taux2  }) }}
                                        </td>
                                        <td class="text-center">
                                            <span class="text-{{ axe.archiving ? 'info' : 'light' }}"><i
                                                        class="fas fa-circle"></i></span>
                                        </td>
                                        <td class="text-center">
                                            {% if   axe.poles.count==0 %}
                                                <span class="text-light"><i class="fas fa-circle"></i></span>
                                            {% else %}
                                                <small class="badge bg-info">{{ axe.poles.count }}</small>
                                            {% endif %}
                                        </td>
                                        <td class="text-center">
                                            {% if   axe.poles.count==0 %}
                                                <span class="text-light"><i class="fas fa-circle"></i></span>
                                            {% else %}
                                                {% set nbr_t=0 %}
                                                {% for pole in axe.poles %}
                                                    {% set nbr_t = nbr_t + pole.thematiques.count %}
                                                {% endfor %}
                                                {% if   nbr_t==0 %}
                                                    <span class="text-light"><i class="fas fa-circle"></i></span>
                                                {% else %}
                                                    <small class="badge bg-info">{{ nbr_t }}</small>
                                                {% endif %}

                                            {% endif %}
                                        </td>
                                        <td class="text-center">
                                            {% if   axe.poles.count==0 %}
                                                <span class="text-light"><i class="fas fa-circle"></i></span>
                                            {% else %}
                                                {% set nbr_c=0 %}
                                                {% for pole in axe.poles %}
                                                    {% for thematique in pole.thematiques %}
                                                        {% set nbr_c = nbr_c + thematique.categories.count %}
                                                    {% endfor %}
                                                {% endfor %}
                                                {% if   nbr_c==0 %}
                                                    <span class="text-light"><i class="fas fa-circle"></i></span>
                                                {% else %}
                                                    <small class="badge bg-info">{{ nbr_c }}</small>
                                                {% endif %}

                                            {% endif %}
                                        </td>
                                        <td class=" d-flex  justify-content-end ">

                                            {{ include('share/__btn_show.html.twig',
                                                {   'url':'axe_show',
                                                    'id':axe.id,
                                                    'mr':true,
                                                    'sm':true,
                                                }) }}

                                            {% if is_granted('ROLE_GESTIONNAIRE') %}
                                                {{ include('share/__btn_edit.html.twig',
                                                    {   'url':'axe_edit',
                                                        'id':axe.id,
                                                        'sm':true,
                                                    }) }}
                                            {% endif %}
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="7">Aucun d'enregistrement</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>

                </div>
                {% if is_granted('ROLE_GESTIONNAIRE') %}
                    <div class="card-header">
                        {{ include('share/__btn_new.html.twig',
                            {'url':'axe_new'}) }}
                    </div>
                {% endif %}
            </div>
        </div>
    </div>

{% endblock %}


{% block javascripts %}
    <script src="{{ absolute_url( asset('plugins/datatables/jquery.dataTables.js')) }}"></script>
    <script src="{{ absolute_url( asset('plugins/datatables-bs4/js/dataTables.bootstrap4.js')) }}"></script>
    <script src="{{ absolute_url( asset('plugins/datatables-responsive/js/dataTables.responsive.min.js')) }}"></script>
    <script src="{{ absolute_url( asset('plugins/datatables-responsive/js/responsive.bootstrap4.min.js')) }}"></script>
    <script src="{{ absolute_url( asset('js/datatables/axe.js')) }}"></script>
{% endblock %}