<div class="col-12 col-sm-6 col-md-4 d-flex align-items-stretch">
    <div class="card bg-light">
        <div class="card-header border-bottom-0">
            <a href="{{ path('user_show',{'id':user.id }) }}">
                <b>{{ user.name }}</b>
            </a>
        </div>
        <div class="card-body pt-0">
            <div class="row">
                <div class="col-7">
                    <p class="text-muted text-sm">
                        {{ user.content }}
                    </p>

                    {% for organisme in user.organismes %}
                        <p class="text-muted text-sm">
                            <i class="fa fa-city mr-1"></i>{{ organisme.fullname }}
                        </p>
                    {% endfor %}
                    <p class="text-muted text-sm">
                        <i class="fas fa-envelope mr-1"></i>{{ user.email }}
                    </p>
                    {%  if user.phone %}
                    <p class="text-muted text-sm">
                        <i class="fas fa-phone mr-1"></i>{{ user.phone }}
                    </p>
                    {% endif %}
                </div>
                <div class="col-5 text-center">
                    <img src="{{ user.avatar.image }}" alt="" class="img-circle img-fluid">
                </div>
            </div>
        </div>
        <div class="card-footer">
            <div class="text-right">
                <a href="mailto::{{ user.email }}" class="btn btn-sm bg-teal">
                    <i class="fas fa-envelope"></i>
                </a>

            </div>
        </div>
    </div>
</div>
